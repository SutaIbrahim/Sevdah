@model KupacKontoKartica
@{
    ViewData["Title"] = "PrikaziKontoKarticu";
}

<h2>PrikaziKontoKarticu</h2>
<section id="main-content">
    <section class="wrapper">
        <section class="panel">

            <header class="panel-heading">
                <h2><b>Konto kartica</b></h2>

            </header>
            <br />
            <br />

            <div class="panel-body">
                <div class="pull-right">
                    <a class="btn btn-danger" href="/Kupac/Index"><i class="fa fa-close"></i> Odustani</a>
                </div>
                <br />
                <br />
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Datum</th>
                            <th>Duguje</th>
                            <th>Potrazuje</th>
                            <th>Saldo</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.redovi)
                        {
                            <tr>
                                <td>@item.Datum</td>
                                <td>@Math.Round(item.Duguje,2)</td>
                                <td>@Math.Round(item.Potrazuje,2)</td>
                                <td>@Math.Round(item.Saldo,2)</td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </section>
</section>

